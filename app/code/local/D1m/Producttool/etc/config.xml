<?xml version="1.0" ?>
<config>
    <modules>
        <D1m_Producttool>
            <version>0.1.1</version>
        </D1m_Producttool>
    </modules>
    <admin>
        <routers>
            <producttool>
                <use>admin</use>
                <args>
                    <module>D1m_Producttool</module>
                    <frontName>producttool</frontName>
                </args>
            </producttool>
        </routers>
    </admin>
    <frontend>
        <routers>
            <d1m_producttool>
                <use>standard</use>
                <args>
                    <module>D1m_Producttool</module>
                    <frontName>producttool</frontName>
                </args>
            </d1m_producttool>
        </routers>
        <layout>
            <updates>
                <producttool>
                    <file>producttool.xml</file>
                </producttool>
            </updates>
        </layout>
        <translate>
            <modules>
                <D1m_Producttool>
                    <files>
                        <D1m_Producttool>D1m_Producttool.csv</D1m_Producttool>
                    </files>
                </D1m_Producttool>
            </modules>
        </translate>
    </frontend>

    <adminhtml>


        <menu>
            <etam>
                <children>
                    <d1m_producttool translate="title" module="d1m_producttool">
                        <title>课程</title>
                        <sort_order>900</sort_order>
                        <children>
                            <producttool>
                                <title>课程导入</title>
                                <sort_order>10</sort_order>
                                <action>producttool/adminhtml_producttool/index</action>
                            </producttool>
                            <downloadfile>
                                <title>课程资料</title>
                                <sort_order>20</sort_order>
                                <action>producttool/adminhtml_downloadfile/index</action>
                            </downloadfile>
                            <changeqty>
                                <title>课程调整</title>
                                <sort_order>30</sort_order>
                                <action>producttool/adminhtml_changeqty/index</action>
                            </changeqty>
                            <order>
                                <title>课程订购统计</title>
                                <sort_order>40</sort_order>
                                <action>producttool/adminhtml_order/index</action>
                            </order>

                        </children>
                    </d1m_producttool>
                </children>
            </etam>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <etam translate="title">
                        <title>定制功能</title>
                            <children>
                                <d1m_producttool translate="title" module="d1m_producttool">
                                    <title>课程</title>
                                    <sort_order>100</sort_order>
                                    <children>
                                        <producttool>
                                            <title>课程导入</title>
                                            <sort_order>10</sort_order>
                                        </producttool>
                                        <downloadfile>
                                            <title>课程资料</title>
                                            <sort_order>20</sort_order>
                                        </downloadfile>
                                        <changeqty>
                                            <title>课程调整</title>
                                            <sort_order>30</sort_order>
                                        </changeqty>
                                        <order>
                                            <title>课程订购统计</title>
                                            <sort_order>40</sort_order>
                                        </order>
                                    </children>
                                </d1m_producttool>
                            </children>
                        </etam>
                    </children>
                </admin>
            </resources>
        </acl>

        <translate>
            <modules>
                <D1m_Producttool>
                    <files>
                        <default>D1m_Producttool.csv</default>
                    </files>
                </D1m_Producttool>
            </modules>
        </translate>

        <layout>
            <updates>
                <producttool>
                    <file>d1m_producttool.xml</file>
                </producttool>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <d1m_producttool>
                <class>D1m_Producttool_Model</class>
                <resourceModel>producttool_mysql4</resourceModel>
            </d1m_producttool>
            <producttool_mysql4>
                <class>D1m_Producttool_Model_Mysql4</class>
                <entities>
                    <downloadfile>
                        <table>d1m_producttool_downloadfile</table>
                    </downloadfile>
                </entities>
            </producttool_mysql4>
        </models>
        <resources>
            <d1m_producttool_setup>
                <setup>
                    <module>D1m_Producttool</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </d1m_producttool_setup>
        </resources>

        <blocks>
            <d1m_producttool>
                <class>D1m_Producttool_Block</class>
            </d1m_producttool>
        </blocks>
        <helpers>
            <d1m_producttool>
                <class>D1m_Producttool_Helper</class>
            </d1m_producttool>
        </helpers>
    </global>

</config>
